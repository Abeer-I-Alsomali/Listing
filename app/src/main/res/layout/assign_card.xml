<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="265dp"
    android:layout_height="160dp"
    android:layout_marginBottom="13dp"
    android:paddingBottom="13dp"
    android:transitionName="@string/transition_string"
    android:layout_marginEnd="13dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/material_img_card"
            android:layout_width="77dp"
            android:layout_height="139dp"
            android:layout_marginStart="8dp"
            android:paddingRight="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />


        <TextView
            android:id="@+id/driver_pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Driver: "
            app:layout_constraintStart_toEndOf="@+id/material_img_card"
            app:layout_constraintTop_toBottomOf="@+id/material_name" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/driver_tv"
            app:layout_constraintTop_toBottomOf="@id/material_name"
            app:layout_constraintStart_toEndOf="@+id/driver_pt"
            android:layout_marginTop="8dp"
            />

        <TextView
            android:id="@+id/vehicle_pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle: "
            app:layout_constraintBottom_toTopOf="@+id/quan_pt"
            app:layout_constraintStart_toEndOf="@+id/material_img_card"
            app:layout_constraintTop_toBottomOf="@+id/driver_pt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/vehicle_tv"
            app:layout_constraintTop_toBottomOf="@+id/driver_tv"
            app:layout_constraintStart_toEndOf="@+id/vehicle_pt"
            app:layout_constraintBottom_toTopOf="@+id/quan_pt"
            />


        <TextView
            android:id="@+id/quan_pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity: "
            app:layout_constraintBottom_toTopOf="@id/add_button"
            app:layout_constraintEnd_toStartOf="@id/quan_tv"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@id/material_img_card"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:id="@+id/quan_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:text="inttext"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/add_button"
            app:layout_constraintStart_toEndOf="@+id/material_img_card"
            android:layout_marginBottom="2dp"/>

        <TextView
            android:id="@+id/assignstat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingRight="11dp"
            android:text="TextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/material_img_card" />

        <TextView
            android:id="@+id/material_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="TextView"
            android:textColor="@color/SADarkGreen"
            android:textSize="17sp"
            app:layout_constraintStart_toEndOf="@+id/material_img_card"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/line"
            android:layout_width="150dp"
            android:layout_height="1dp"
            android:layout_marginTop="3dp"
            android:background="@android:color/darker_gray"
            android:backgroundTint="@color/SADarkGreen"
            app:layout_constraintStart_toEndOf="@id/material_img_card"
            app:layout_constraintTop_toBottomOf="@id/material_name" />

<!--
        <Button
            android:id="@+id/unload_button"
            android:layout_width="79dp"
            android:layout_height="40dp"
            android:layout_marginStart="15dp"
            android:background="@color/twentyfivGray"
            android:text="Unload"
            android:textColor="#ffffff"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/load_button"
            app:layout_constraintTop_toBottomOf="@+id/int_tx_row" />
            -->

        <Button
            android:id="@+id/add_button"
            android:layout_width="105dp"
            android:layout_height="40dp"
            android:layout_marginBottom="4dp"
            android:background="@color/SaDarkGray"
            android:text="Add driver and vehicle"
            android:textColor="#ffffff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/locbut" />

        <ImageButton
            android:id="@+id/locbut"
            android:layout_width="50dp"
            android:layout_height="47dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:src="@mipmap/saloc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>