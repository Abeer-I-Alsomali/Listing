<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="item"
            type="com.example.listing.models.Material2" />

        <variable
            name="addButtonListen"
            type="com.example.listing.AddButtonClicked" />

        <variable
            name="pos"
            type="int" />

        <variable
            name="driver"
            type="com.example.listing.models.Driver" />
    </data>

<androidx.cardview.widget.CardView
    android:layout_width="265dp"
    android:layout_height="150dp"
    android:layout_marginEnd="13dp"
    android:layout_marginBottom="13dp"
    android:paddingBottom="13dp"
    android:transitionName="@string/transition_string">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="@{item.zuphrFpName}"
            android:id="@+id/material_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:ems="15"
            android:maxLines="1"
            android:textColor="@color/SADarkGreen"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <View
            android:id="@+id/line"
            android:layout_width="150dp"
            android:layout_height="1dp"
            android:layout_marginTop="4dp"
            android:background="@android:color/darker_gray"
            android:backgroundTint="@color/SADarkGreen"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/material_name"
            app:layout_constraintVertical_bias="0.0" />


        <ImageView
            android:id="@+id/material_img_card"
            android:layout_width="77dp"
            android:layout_height="80dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/defult"
            android:paddingRight="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line"
            app:layout_constraintVertical_bias="0.0" />


        <TextView
            android:id="@+id/driver_pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Driver: "
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.425"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.30" />


        <!--
                <Button
                    android:id="@+id/unload_button"
                    android:layout_width="79dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="15dp"
                    android:background="@color/twentyfivGray"
                    android:text="Unload"
                    android:textColor="#ffffff"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/load_button"
                    app:layout_constraintTop_toBottomOf="@+id/int_tx_row" />
                    -->

        <TextView
            android:id="@+id/vehicle_pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:text="Vehicle: "
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/driver_pt"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3" />

        <TextView
            android:id="@+id/quan_pt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity: "
            app:layout_constraintBottom_toTopOf="@id/add_button"
            app:layout_constraintHorizontal_bias="0.456"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/quan_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:ems="7"
            android:maxLines="1"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/add_button"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toEndOf="@+id/quan_pt"
            app:layout_constraintTop_toTopOf="@+id/quan_pt" />

        <TextView
            android:id="@+id/assignstat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ems="8"
            android:gravity="start"
            android:paddingStart="10dp"
            android:paddingRight="11dp"
            android:maxLines="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/material_img_card"
            app:layout_constraintTop_toBottomOf="@+id/material_img_card"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/add_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/ic_clipboard"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            android:onClick="@{() -> addButtonListen.addButtonClicked(pos)}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <ImageButton
            android:id="@+id/locbut"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="44dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/ic_baseline_location_on_40"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <androidx.recyclerview.widget.RecyclerView
            android:background="@color/colorPrimaryDark"
            android:id="@+id/chosen_drivers_card"
            android:layout_width="73dp"
            android:layout_height="29dp"
            app:layout_constraintStart_toStartOf="@+id/driver_pt"
            app:layout_constraintTop_toBottomOf="@+id/driver_pt" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chosen_vehicles_card"
            android:layout_width="73dp"
            android:layout_height="28dp"
            app:layout_constraintStart_toStartOf="@+id/vehicle_pt"
            app:layout_constraintTop_toBottomOf="@+id/vehicle_pt" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
</layout>